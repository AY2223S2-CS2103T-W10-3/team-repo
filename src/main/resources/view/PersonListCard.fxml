<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets bottom="5" left="15" right="5" top="5" />
            </padding>
            <HBox alignment="CENTER_LEFT" spacing="5">
                <Label fx:id="id" styleClass="cell_big_label" wrapText="true">
                    <minWidth>
                        <!-- Ensures that the label text is never truncated -->
                        <Region fx:constant="USE_PREF_SIZE" />
                    </minWidth>
                </Label>
                <Label fx:id="rank" minWidth="-Infinity" styleClass="cell_big_label" text="\$rank" />
                <Label fx:id="name" styleClass="cell_big_label" text="\$first" wrapText="true" />
            </HBox>
            <HBox fx:id="tags" spacing="3.0" />
            <Label fx:id="unit" styleClass="cell_small_label" text="\$unit" />
            <Label fx:id="company" styleClass="cell_small_label" text="\$company" />
            <Label fx:id="platoon" styleClass="cell_small_label" text="\$platoon" />
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
            <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
            <Label fx:id="address" styleClass="cell_small_label" text="\$address" wrapText="true" />
        </VBox>
      <rowConstraints>
         <RowConstraints />
      </rowConstraints>
    </GridPane>
</HBox>
